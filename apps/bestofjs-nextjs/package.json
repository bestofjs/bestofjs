{
  "name": "bestofjs-nextjs",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "analyze": "cross-env ANALYZE=true next build",
    "build-project-data": "dotenv -e ../../.env.${STAGE:=development} node ./scripts/build-project-data.mjs",
    "dev": "dotenv -e ../../.env.${STAGE:=development} next dev --turbopack",
    "build": "pnpm build-project-data && dotenv -e ../../.env.${STAGE:=development} next build",
    "start": "dotenv -e ../../.env.${STAGE:=development} next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "test": "vitest",
    "test:ci": "pnpm build-project-data && vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@klass/core": "^3.4.8",
    "@klass/react": "^3.4.8",
    "@next/bundle-analyzer": "15.0.3",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-collapsible": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-hover-card": "^1.1.1",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@repo/api": "workspace:*",
    "@repo/db": "workspace:*",
    "@t3-oss/env-nextjs": "^0.11.1",
    "@types/debug": "^4.1.8",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "18",
    "@types/numeral": "^2.0.2",
    "@types/react": "npm:types-react@19.0.0-alpha.3",
    "@types/react-dom": "npm:types-react-dom@19.0.0-alpha.3",
    "@vercel/analytics": "^1.0.1",
    "autoprefixer": "^10.4.14",
    "clsx": "^2.0.0",
    "cmdk": "^1.0.0",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.8",
    "debug": "^4.3.7",
    "dotenv-cli": "^7.4.2",
    "es-toolkit": "^1.31.0",
    "fs-extra": "^11.2.0",
    "lucide-react": "0.428.0",
    "mingo": "6.4.15",
    "next": "15.1.5",
    "next-themes": "^0.4.4",
    "nextjs-bundle-analysis": "^0.5.0",
    "postcss": "^8.4.31",
    "pretty-bytes": "^6.1.1",
    "qss": "^3.0.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "sharp": "^0.32.6",
    "swr": "^2.2.0",
    "tailwind-merge": "^1.12.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.5",
    "tiny-invariant": "^1.3.3",
    "typescript": "^5.7.3",
    "unstated-next": "^1.1.0",
    "use-debounce": "^3.0.0",
    "vague-time": "^2.4.2",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "^2.1.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@repo/eslint-config": "workspace:*",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.16.0"
  },
  "nextBundleAnalysis": {
    "budget": null,
    "budgetPercentIncreaseRed": 20,
    "minimumChangeThreshold": 0,
    "showDetails": true
  }
}

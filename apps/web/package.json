{
  "name": "web",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm build-project-data && dotenv -e ../../.env.${STAGE:=development} next build --turbopack",
    "build-project-data": "dotenv -e ../../.env.${STAGE:=development} node ./scripts/build-project-data.mjs",
    "dev": "dotenv -e ../../.env.${STAGE:=development} next dev --turbopack",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "start": "dotenv -e ../../.env.${STAGE:=development} next start",
    "test": "vitest",
    "test:ci": "pnpm build-project-data && vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "@repo/api": "workspace:*",
    "@repo/db": "workspace:*",
    "@t3-oss/env-nextjs": "^0.11.1",
    "@types/debug": "catalog:",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "catalog:",
    "@types/numeral": "^2.0.2",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vercel/analytics": "^1.0.1",
    "autoprefixer": "^10.4.14",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cmdk": "^1.0.0",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.8",
    "debug": "^4.3.7",
    "dotenv-cli": "catalog:",
    "es-toolkit": "^1.31.0",
    "fs-extra": "^11.2.0",
    "lucide-react": "0.428.0",
    "mingo": "6.4.15",
    "next": "catalog:",
    "next-themes": "^0.4.4",
    "postcss": "^8.4.31",
    "pretty-bytes": "^6.1.1",
    "qss": "^3.0.0",
    "radix-ui": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "sharp": "^0.32.6",
    "swr": "^2.2.5",
    "tailwind-merge": "^1.12.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.5",
    "tiny-invariant": "^1.3.3",
    "typescript": "catalog:",
    "unstated-next": "^1.1.0",
    "use-debounce": "^3.0.0",
    "vague-time": "^2.4.2",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "^2.1.9",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2"
  },
  "engines": {
    "node": "22.x"
  },
  "nextBundleAnalysis": {
    "budget": null,
    "budgetPercentIncreaseRed": 20,
    "minimumChangeThreshold": 0,
    "showDetails": true
  }
}
